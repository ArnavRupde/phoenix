---
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
  title: string;
  size?: 'default' | 'narrow';
}

const { title, size = 'default' } = Astro.props;
const contentSize = size === 'default' ? '1200px' : '768px';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Paweł Mrowiec's portfolio, articles and contact information." />
    <meta
      name="keywords"
      content="paweł mrowiec,tavoite,it,php,javascript,nodejs,deno,html,css,symfony,react,nextjs,linux,dev,frontend,backend,fullstack,freelance,freelancer"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="format-detection" content="telephone=no" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Paweł Mrowiec - {title}</title>
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
<style define:vars={{ contentSize }} is:global>
  :root {
    --default-layout-padding: 1rem;
  }

  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  html {
    font-family: 'Quicksand', sans-serif;
    box-sizing: border-box;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.2;
    margin: 0;
    padding: 0;
  }

  body {
    margin: 0;
    padding: 0;
  }

  main {
    max-width: var(--contentSize);
    width: 100%;
    margin: auto;
  }

  img {
    vertical-align: bottom;
  }
</style>
