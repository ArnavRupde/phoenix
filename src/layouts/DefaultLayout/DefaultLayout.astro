---
import Header from './Header.astro';
import Footer, { type Props as FooterProps } from './Footer.astro';

export interface Props {
  title: string;
  meta?: {
    twitter?: {
      title: string;
      description: string;
    };
  };
  disableHeader?: boolean;
  disableFooter?: boolean;
  footerBackground?: FooterProps['background'];
}

const { title, meta, disableHeader, disableFooter, footerBackground } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <title>Paweł Mrowiec - {title}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="format-detection" content="telephone=no" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/fonts/quicksand-v30-latin-ext-regular.woff2" />
    <link rel="preload" href="/fonts/quicksand-v30-latin-ext-500.woff2" />
    <style is:inline>
      @font-face {
        font-display: swap;
        font-family: 'Quicksand';
        font-style: normal;
        font-weight: 400;
        src: url('/fonts/quicksand-v30-latin-ext-regular.woff2') format('woff2');
      }
      @font-face {
        font-display: swap;
        font-family: 'Quicksand';
        font-style: normal;
        font-weight: 500;
        src: url('/fonts/quicksand-v30-latin-ext-500.woff2') format('woff2');
      }
    </style>

    {/* SEO related tags */}
    <meta name="description" content="Paweł Mrowiec's portfolio, articles and contact information." />
    <meta
      name="keywords"
      content="paweł mrowiec,tavoite,it,php,javascript,nodejs,deno,html,css,symfony,react,nextjs,linux,dev,frontend,backend,fullstack,freelance,freelancer"
    />
    {
      meta?.twitter && (
        <>
          <meta name="twitter:card" content="summary" />
          <meta name="twitter:site" content="@Mrowa94" />
          <meta name="twitter:title" content={meta.twitter.title} />
          <meta name="twitter:description" content={meta.twitter.description} />
        </>
      )
    }
  </head>
  <body>
    {!disableHeader && <Header />}

    <main>
      <slot />
    </main>

    {!disableFooter && <Footer background={footerBackground} />}
  </body>
</html>

<style is:global>
  /* Viewport breakpoints (Mobile first!) */
  /* Small: width < 768px */
  /* Medium: 768px <= width < 1024px */
  /* Medium: width >= 1024px */

  :root {
    --default-layout-padding-x: 1.5rem;
    --default-border-radius: 8px;
    --default-line-height: 1.2;

    --c-primary: #99ddcc;
    --c-primary-dark: #387768;
    --c-secondary: #ff5da2;
    --c-secondary-dark: #d1377a;
    --c-white: #fff;
    --c-grey: #f0f0f0;
    --c-black: #000;

    --z-index-0: 0;
    --z-index-1: 1;
    --z-index-2: 2;
    --z-index-3: 3;
  }

  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  html {
    font-family: 'Quicksand', sans-serif;
    box-sizing: border-box;
    font-size: 16px;
    font-weight: 400;
    line-height: var(--default-line-height);
    margin: 0;
    padding: 0;
    height: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100%;
    min-width: 320px;
  }

  main {
    width: 100%;
    margin: auto;
  }

  img {
    vertical-align: bottom;
  }

  .line-clamp-1,
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-1 {
    -webkit-line-clamp: 1;
  }

  .line-clamp-2 {
    -webkit-line-clamp: 2;
  }
</style>
