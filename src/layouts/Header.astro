---
import Avatar from '../components/Avatar.astro';
---

<header>
  <a href=`${Astro.url.origin}` class="homepage-link">
    <Avatar size="small" />
    <span>Pawe≈Ç Mrowiec</span>
  </a>

  <nav>
    <a href=`${Astro.url.origin}/#introduction`>Introduction</a>
    <a href=`${Astro.url.origin}/#projects`>Projects</a>
    <a href=`${Astro.url.origin}/#articles`>Articles</a>
    <a href=`${Astro.url.origin}/#contact`>Contact</a>
  </nav>

  <div class="links">links</div>
</header>

<style>
  header {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    padding: 1rem;
    position: sticky;
    top: 0;
    background: white;
    box-shadow: 0px -25px 10px 20px rgba(0, 0, 0, 0.5);

    & .homepage-link {
      text-decoration: none;
      color: black;
      display: flex;
      align-items: center;
      font-weight: 500;
      font-size: 1.5rem;
      gap: 0.6rem;
    }

    & nav {
      margin: auto;

      & a {
        text-decoration: none;
        color: #000;
        padding: 0.5rem;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    .links {
      margin: auto 0;
      text-align: right;
    }
  }
</style>
