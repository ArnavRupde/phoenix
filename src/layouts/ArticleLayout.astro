---
import DefaultLayout from './DefaultLayout/DefaultLayout.astro';
import NarrowContainer from '../components/Containers/NarrowContainer.astro';

type Props = {
  title: string;
  lead: string;
};

const { title, lead } = Astro.props;
---

<DefaultLayout title={title} meta={{ twitter: { title, description: lead } }}>
  <NarrowContainer>
    <slot />
  </NarrowContainer>
</DefaultLayout>
